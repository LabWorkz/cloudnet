#order-summary
  %h2 Order Summary:
  %p 
    = @location.try(:budget_vps) ? "VPS Server" : "Cloud Server"
    %br
    %span.order-provider
      with 
      = @location.try(:provider)
      
  =summary_param("Memory", "MB", @server_params[:mem])
  =summary_param("CPU(s)", "Core", @server_params[:cpu])
  =summary_param("Disk Space", "GB", @server_params[:disk])
  %p
    Location
    %span.pull-right.value= @location.city
    %br
    %span.pull-right.value= @location.country_name
  %p.summary
    Monthly
    %span.pull-right.value= "$" + @m_price.to_s
    %br
    Hourly
    %span.pull-right.value= "$" + @h_price.to_s
