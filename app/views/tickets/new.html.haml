- breadcrumb :new_ticket
- title "New Ticket"

- if @ticket.errors.any?
  %div.alert.alert-danger
    %a.close{href: "#", data: {dismiss: "alert"}} &times;
    %strong Error: 
    = @ticket.errors.full_messages.join(', ')

.jg-widget-content
  .jg-widget-header.pure-g.clearfix
    %h2.pure-u-1-2.jg-icon.icon-tickets
      New ticket
  .jg-widget-body
    = render 'form'