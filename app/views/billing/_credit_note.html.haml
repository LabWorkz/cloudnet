%tr
  %td.pure-u-1-5= link_to "Credit Note ##{credit_note.credit_number}", billing_credit_note_pdf_path(credit_note.sequential_id)
  %td.pure-u-1-5= credit_note.created_at.to_formatted_s(:long_ordinal)
  %td.pure-u-1-5
    .tags{class: "#{credit_note.state.to_s}"}= tag_string(credit_note.state)
  %td.pure-u-1-5= pretty_total(credit_note.total_cost)
  %td.pure-u-1-5
    .btn-group{class: 'sticky'}
      %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button", "data-target" => "#"}
        %span.icon-settings
        %span.icon-arrow-down
      %ul.jg-dropmenu.dropdown-menu.dropdown-menu-right{role: "menu"}
        %li
          = link_to 'Download PDF Credit Note', billing_credit_note_pdf_path(credit_note.sequential_id)